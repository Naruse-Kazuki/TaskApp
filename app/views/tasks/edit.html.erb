<% provide(:title, 'Task edit') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true) do |f| %>
      
      <%= f.label :名称, class: "label-edittask" %>
      <%= f.text_area :task_name, class: "form-control", rows: 1 %>

      <%= f.label :詳細, class: "label-edittask" %>
      <%= f.text_area :note, class: "form-control", rows: 5 %>

      <%= f.submit "新規登録", class: "btn btn-primary btn-lg btn-edittask" %>
    <% end %>
  </div>
</div>