<header class="navbar navbar-fixed-top navbar-inverse" id="header">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, id:"list" %></li>
        <% if logged_in? %>
          <li><%= link_to "利用者一覧", users_path, id:"list" %></li>
          <li><%= link_to "タスク作成", new_task_path, id:"list" %></li>
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdown-title" >
              <%= @current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "タスク一覧", tasks_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, id:"list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
