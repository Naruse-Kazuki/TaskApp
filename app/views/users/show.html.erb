<% provide(:title, @user.name) %>
<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_with(model: @user, local: true) do |f| %>
        <table class="table" id="table-user">
            <tbody>
                <tr>
                    <th class="active col-md-2" >ID</th>
                    <td class="col-md-6" ><%= @user.id %></td>
                </tr>
                <tr>
                    <th class="active col-md-2" >名前</th>
                    <td class="col-md-6" ><%= @user.name %></td>
                </tr>
                <tr>
                    <th class="active col-md-2" >メールアドレス</th>
                    <td class="col-md-6" ><%= @user.email %></td>
                </tr>
                <tr>
                    <th class="active col-md-2" >作成日</th>
                    <td class="col-md-6" ><%= @user.created_at %></td>
                </tr>
            </tbody>
        </table>
    <% end %>
  </div>    
</div>

